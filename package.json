{
  "name": "m-ld-website",
  "version": "0.0.1",
  "description": "m-ld.org website",
  "scripts": {
    "clean": "rm -rf public",
    "build": "npm run build:dev && npm run postcss && npx eleventy",
    "build:dev": "node-sass src/main.scss public/main.css",
    "postcss": "postcss --use autoprefixer --output public/main.css public/main.css",
    "dev": "npm run build:dev && npx eleventy --serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsvarovsky/m-ld-website.git"
  },
  "author": "George Svarovsky <gsvarovsky@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gsvarovsky/m-ld-website/issues"
  },
  "homepage": "https://github.com/gsvarovsky/m-ld-website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "autoprefixer": "^9.6.1",
    "bulma": "^0.7.5",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.3"
  }
}
